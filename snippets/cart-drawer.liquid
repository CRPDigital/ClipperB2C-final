{%- doc -%}
  Renders the cart drawer, a slide-out panel that displays the contents of the cart. It includes the cart icon that acts as a trigger.

  @param {object} [settings] - An object containing theme settings.

  @param {boolean} [settings.auto_open_cart_drawer] - If `true`, the cart drawer opens automatically after an item is
  added.
  @param {string} [settings.drawer_color_scheme] - The color scheme for the drawer.
{%- enddoc -%}

<script
  src="{{ 'cart-drawer.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

<cart-drawer-component
  class="cart-drawer"
  {{ block.shopify_attributes }}
  {% if settings.auto_open_cart_drawer %}
    auto-open
  {% endif %}
>
  <button
    class="button header-actions__action button-unstyled"
    on:click="/open"
    aria-label="{{ 'accessibility.open_cart_drawer' | t }} {{ 'accessibility.cart_count' | t}}: {{ cart.item_count }}"
  >
    {% render 'cart-icon-component' %}
  </button>

  <dialog
    ref="dialog"
    class="cart-drawer__dialog dialog-modal dialog-drawer color-{{ settings.drawer_color_scheme }}{% if cart.empty? %} cart-drawer--empty{%endif%}"
    scroll-lock
  >
    <div class="cart-drawer__inner">
      <cart-items-component
        class="cart-items-component"
        data-section-id="{{ section.id }}"
      >
        {%- if cart.empty? -%}
          <div class="cart-drawer__header">
            <button
              ref="closeButton"
              on:click="cart-drawer-component/close"
              class="button cart-drawer__close-button button-unstyled"
              aria-label="{{ 'actions.close_dialog' | t }}"
            >
              <span class="svg-wrapper">
                {{- 'icon-close.svg' | inline_asset_content -}}
              </span>
            </button>
          </div>

          <div
            class="cart-drawer__content motion-reduce"
            aria-label="{{ 'accessibility.cart' | t }}"
          >
            <span class="cart-drawer__heading h3 cart-drawer__heading--empty">
              {{ 'content.your_cart_is_empty' | t }}
            </span>

            <div class="cart-drawer__items">
              {% render 'cart-products' %}
            </div>

          </div>
        {%- else -%}
          <div
            class="cart-drawer__header"
            id="cart-drawer-header"
          >
            <span class="cart-drawer__heading h3">
              {{ 'content.cart_title' | t }}
              {% render 'cart-bubble' %}
            </span>

            <button
              ref="closeButton"
              on:click="cart-drawer-component/close"
              class="button cart-drawer__close-button button-unstyled"
              aria-label="{{ 'actions.close_dialog' | t }}"
            >
              <span class="svg-wrapper">
                {{- 'icon-close.svg' | inline_asset_content -}}
              </span>
            </button>
          </div>

          {% assign free_shipping_threshold = settings.free_shipping_threshold | default: 499 %}
          {% assign cart_total = cart.total_price | divided_by: 100 %}

          <div class="free-shipping-bar">
            {% if cart_total < free_shipping_threshold %}
              <p>KÃ¸b for <strong>{{ free_shipping_threshold | minus: cart_total }} kr.</strong> mere og opnÃ¥ fri fragt</p>
            {% else %}
              <p>ðŸŽ‰ Tillykke, du har opnÃ¥et fri fragt!</p>
            {% endif %}

            {% assign progress = cart_total | times: 100 | divided_by: free_shipping_threshold %}
            {% if progress > 100 %}
              {% assign progress = 100 %}
            {% endif %}

            <div class="progress-wrapper">
              <div class="progress-fill" style="width: {{ progress }}%;"></div>
            </div>
          </div>



          <div
            class="cart-drawer__content motion-reduce"
            aria-label="{{ 'accessibility.cart' | t }}"
            style="--header-height: 60px;"
          >
            <scroll-hint
              class="cart-drawer__items"
            >
              {% render 'cart-products' %}

              {% if settings.recommendations_enabled == 'enabled' %}
              <div id="cart-recommendations">
                <h6 class="recommendations-heading">Vi anbefaler</h6>
                <div class="recommendations-scroll"></div>
              </div>
            {% endif %}

             </scroll-hint>
            
            <div
              class="cart-drawer__summary"
            >
              {% render 'cart-summary' %}
            </div>

                    <div
          class="payment-icons spacing-style"
          style="
            {% render 'spacing-padding', settings: block.settings %}
            --icon-gap: 10px;
            --alignment: center;
          "
        >
          <span class="visually-hidden">{{ 'blocks.payment_methods' | t }}</span>
          <ul class="payment-icons__list" role="list">
            {%- for type in shop.enabled_payment_types -%}
              <li class="payment-icons__item">
                {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
              </li>
            {%- endfor -%}
          </ul>
        </div>
            
          </div>
        {%- endif -%}
      </cart-items-component>
    </div>
  </dialog>
</cart-drawer-component>

{% stylesheet %}

.free-shipping-bar {
  margin: 1rem 0;
  text-align: center;
  font-size: 14px;
}

.progress-wrapper {
  background: #eee;
  border-radius: 999px;
  overflow: hidden;
  height: 10px;
  margin-top: 6px;
}

.progress-fill {
  background: #2c7a7b;
  height: 100%;
  transition: width 0.3s ease;
}

  .cart-items-component {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .cart-drawer__heading .cart-bubble {
    width: fit-content;
    border-radius: var(--style-border-radius-buttons-primary);
    aspect-ratio: auto;
    padding: var(--cart-padding);
  }

  .cart-drawer__heading .cart-bubble[data-maintain-ratio] {
    aspect-ratio: 1;
    min-width: 26px;
  }

  .cart-drawer__header {
    background-color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: var(--cart-drawer-padding);
    border-bottom: var(--style-border-width) solid none;
    position: sticky;
    top: 0;
    z-index: 1;

    @media screen and (min-width: 750px) {
      padding: var(--cart-drawer-padding-desktop);
    }
  }

  .cart-drawer__dialog {
    overflow: hidden;
  }

  .cart-drawer__inner {
    height: 100%;
    overflow: hidden;
  }

  .cart-drawer__content {
    height: calc(100% - var(--header-height));
    display: flex;
    flex-direction: column;
  }

  .cart-drawer__summary {
    gap: 1rem !important;
    background-color: var(--color-background);
    position: sticky;
    bottom: 0;
    z-index: 1;
  }

  .payment-icons__list {
    display: flex;
    align-items: center;
    justify-content: var(--alignment, center);
    flex-wrap: wrap;
    gap: var(--icon-gap, 10px);
    margin: 0 0 2rem 0;
    padding: 0;
    list-style: none;
  }

  .payment-icons__item {
    display: flex;
    align-items: center;
  }


.recommendations-scroll {
  display: flex;
  gap: 1rem;
  overflow-x: auto;
  padding: 0.5rem 0;
  scroll-snap-type: x mandatory;
}

/* Hvert produktkort */
.recommendation-slide {
  flex: 0 0 auto;
  width: 140px;
  scroll-snap-align: start;
  text-align: center;
}

.recommendation-slide img {
  width: 100%;
  aspect-ratio: 3 / 4;
  object-fit: cover;
  border-radius: 6px;
  display: block;
}


.recommendations-heading {
  text-align: center;
  padding-top: 1rem;
  margin-bottom: 0.5rem;
}

.recommendation-price {
  font-size: 0.85rem;
  font-weight: 600;
  margin-top: 0.1rem;
}

/* Mobil tilpasning */
@media (max-width: 749px) {
  .recommendation-slide {
    width: 110px; /* endnu smallere pÃ¥ mobil */
  }
  .recommendation-slide img {
    max-height: 120px;
  }
}

{% endstylesheet %}